<div
	class="row"
	style="justify-content: center; text-align: center; align-items: center; width: 700px; margin-top: 50px;"
>
	<div class="col s12" style="padding:0;">
		<div class="card hoverable">
			<div class="card-content z-depth-2">
				<span class="card-title">Edit your product here </span>

				<div class="row " style="margin: 0;">
					<div
						class="col s12 offset-s3"
						id="panell"
						style="margin: 0; padding:0"
					>
						<form
							method="POST"
							action="/product/edit/<%= product._id %>"
							id="myform2_id"
							enctype="multipart/form-data"
						>
							<div class="input-field" id="productname">
								<input
									type="text"
									placeholder="Enter your productname"
									name="name"
									value="<%= product.name %>"
								/>
							</div>
							<div class="input-field" id="link">
								<input
									type="text"
									placeholder="specs"
									name="specs"
									value="<%= product.specs %>"
								/>
							</div>
							<div class="input-field" id="price">
								<input
									type="text"
									placeholder="price"
									name="price"
									value="<%= product.price %>"
								/>
							</div>

							<div class="file-field input-field">
								<div class="btn deep-purple accent-3">
									<span>upload product image</span>
									<input type="file" name="image" id="image" value="<%= product.img %>" />
								</div>
								<div class="file-path-wrapper">
									<input class="file-path validate" type="text" value="/<%= product.img %>" />
								</div>
							</div>
						</form>
						<textarea
							form="myform2_id"
							name="desc"
							id="taid"
							cols="35"
							wrap="soft"
							placeholder="description about your product"
						><%= product.desc %>
            </textarea
						><br /><br />

						<a
							class="waves-effect waves-light btn deep-purple accent-3"
							id="loginbtn"
							href="javascript:$('#myform2_id').submit();"
						>
							<i class="material-icons right">send</i>
							save
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
